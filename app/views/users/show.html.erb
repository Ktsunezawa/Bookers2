<P><%= flash[:notice] %></P>
<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/list', users: @users %>
    <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
       <table class="table table-hover table-inverse">
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
           </tr>
         </thead>
         <tbody>
           <% @books.each do |book| %>
           <tr>
             <td><%= link_to user_path(user.id) do %>
                 <%= attachment_image_tag user, :UserImageId, fallback: "no_image.jpg"  %></td>
                 <% end %>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
             <td><%= link_to "Edit", edit_user_path(user.id), class: 'btn btn-sm btn-success edit_book_id' %></td>
             <td><%= link_to "Destroy", destroy_user_path, method: :delete, "data-confirm" => "本当に消しますか？",class: 'btn btn-sm btn-danger destroy_book_id' %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>
