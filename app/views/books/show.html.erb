<P><%= flash[:notice] %></P>
<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/list', users: @users %>
<div class="col-md-8 offset-md-1">
         <h2>Book detail</h2>
       <table class="table table-hover table-inverse">
       <tbody>
           <% @books.each do |book| %>
           <tr>
             <td><%= link_to user_path(user.id) do %>
                 <%= attachment_image_tag user, :UserImageId, fallback: "no_image.jpg"  %></td>
                 <% end %>
             <td><%= link_to book_path(user.id) do %>
                 <%= book.title %>
                 <% end %>
                 </td>
             <td><%= book.body %></td>
           </tr>
           <% end %>
         </tbody>
       </table>
       </div>
  </div>
</div>