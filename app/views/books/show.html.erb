<P><%= flash[:notice] %></P>
<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/list', user: @user %>
<div class="col-md-8 offset-md-1">
         <h2>Book detail</h2>
       <table class="table table-hover table-inverse">
       <tbody>
           <% @books.each do |book| %>
           <tr>
             <td><%= link_to user_path(@user.id) do %>
                 <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %><br>
                 <%= @user.name %>
                 <% end %>
             </td>
             <td><%= link_to book_path(book.id) do %>
                 <%= book.title %>
                 <% end %>
                 </td>
             <td><%= book.body %></td>
             <% if user_signed_in? && book.user_id == current_user.id %>
             <td><%= link_to "Edit", edit_book_path(book.id), class: 'btn btn-sm btn-success edit_book_id' %></td>
             <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？",class: 'btn btn-sm btn-danger destroy_book_id' %></td>
             <% end %>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>
  </div>
</div>